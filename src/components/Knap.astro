---
const { text } = Astro.props;
---

<button>
  <div class="inner">
    {text}
  </div>
</button>

<style>
  button {
    padding: 0.1rem;
    position: relative;
    background: var(--button-deafult);
    border-radius: 22px;
    border: none;
  }

  .inner {
    background: var(--bg-knap);
    color: var(--primary-text-color);
    padding: 0.65rem;
    padding-left: 0.9rem;
    padding-right: 0.9rem;
    border-radius: 20px;
  }
</style>

