---
import Knap from "../components/Knap.astro";
const { text } = Astro.props;
---

<header>
  <nav class="flexNav">
    <ul class="flexUl">
      <li data-link="/"><Knap {text} /></li>
      <li data-link="/"><Knap {text} /></li>
      <li data-link="program">
        <Knap {text} />
      </li>
      <li data-link="/"><a href="/"><Knap {text} /></a></li>
      <li data-link="/"><a href="/"><Knap {text} /></a></li>
    </ul>
  </nav>
</header>

<style>
  nav {
    justify-content: center;
    align-items: center;
    position: relative;
    z-index: 100;
  }
  ul {
    list-style: none;
    max-width: fit-content;
    padding: 10px;
    border-radius: 25px;
    background-color: var(--bg-overlay);
    justify-content: center;
    align-items: center;
  }
  a {
    font-family: "circular";
    font-size: 16px;
  }

  .grid {
    display: grid;
    gap: 0.3rem;
  }

  .flexUl {
    display: flex;
    gap: 1rem;
  }
  .flexNav {
    display: flex;
    gap: 16%;
  }
</style>

