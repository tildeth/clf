---
import "../styles/style.css";
const { data } = Astro.props;
---

<a href={`program/${data.slog}`}>
  <article class="kcard">
    <div class="kcard_box">
      <img src={data.image} alt="billede" />
    </div>
    <h3>{data.title}</h3>
  </article>
</a>

<style>
  .kcard {
    display: flex;
    flex: 0 0 auto;
    flex-direction: column;
    align-items: center;
    border: 1px solid #ccc;
    border-radius: 5px;
    padding: 10px;
    width: 300px;
    height: 450px;
    overflow: hidden;
    padding: 1%;
    margin: 10px;
  }
  .kcard_box {
    width: 300px;
    height: 300px;
    overflow: hidden;
    border-radius: 2rem;
  }
  .kcard img {
    width: auto;
    height: 300px;
  }
  h3 {
    margin: 2%;
    padding: 10%;
    text-align: center;
    font-size: 250%;
    text-shadow: 0 0 15px rgba(255, 255, 255, 0.7);
  }
</style>
