---
import "../styles/style.css";
const { data } = Astro.props;
---

<a href={`program/${data.slog}`}>
  <article class="kcard">
    <div class="kcard_box">
      <img src={data.image} alt="billede" />
      <div class="overlay">LÃ¦s mere</div>
    </div>
    <h3>{data.title}</h3>
  </article>
</a>

<style>
  .kcard {
    display: flex;
    flex: 0 0 auto;
    flex-direction: column;
    align-items: center;
    border: 1px solid #ccc;
    border-radius: 5px;
    padding: 10px;
    width: 300px;
    height: 450px;
    overflow: hidden;
    padding: 1%;
    margin: 10px;
  }
  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7);
    color: var(--primary-text-color);
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 1;
    font-family: "circular";
    src: url("../fonts/circular-std-medium-500-webfont.woff2");
    font-size: 30px;
  }

  .kcard_box:hover .overlay {
    opacity: 1;
  }

  .kcard_box {
    width: 300px;
    height: 300px;
    overflow: hidden;
    border-radius: 2rem;
    position: relative;
  }
  .kcard img {
    width: auto;
    height: 300px;
  }
  h3 {
    margin: 2%;
    padding: 10%;
    text-align: center;
    font-size: 250%;
    text-shadow: 0 0 15px rgba(255, 255, 255, 0.7);
    color: var(--primary-text-color);
  }
</style>
