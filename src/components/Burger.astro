<style>
  /* burgermenu */
  .menu {
    display: none;
  }

  .burger {
    position: relative;
    display: block;
    width: 35px;
    cursor: pointer;
    z-index: 99;

    appearance: none;
    background: none;
    outline: none;
    border: none;
  }

  .burger .bar,
  .burger::after,
  .burger::before {
    content: "";
    display: block;
    width: 100%;
    height: 5px;
    background-color: #9b0823;
    margin: 6px 0;
    transition: 0.4s;
  }

  .burger.is-active::before {
    transform: rotate(-45deg) translate(-8px, 6px);
  }

  .burger.is-active .bar {
    opacity: 0;
  }

  .burger.is-active::after {
    transform: rotate(45deg) translate(-9px, -8px);
  }

  .mobil_nav {
    position: fixed;
    top: 0;
    left: 100%;
    width: 100%;
    min-height: 100vh;
    display: block;
    z-index: 98;
    background-color: #1f232e;
    padding-top: 120px;
    transition: 0.4s;
  }

  .mobil_nav.is-active {
    left: 0;
  }
  .mobil_nav a {
    display: block;
    width: 100%;
    max-width: 200px;
    margin: 0 auto 16px;
    text-align: center;
    padding: 12px 16px;
    background-image: url("../img/grainbg.png");

    color: #1f232e;
    text-decoration: none;
  }
  .mobil_nav a:hover {
    background-color: #2d3243;
  }
</style>
