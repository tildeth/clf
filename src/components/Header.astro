---
import "../styles/style.css";
import Knap from "../components/Knap.astro";
import Sprog_knap from "./Sprog_knap.astro";
---

<header id="descNav">
  <nav class="flexNav">
    <a href="/"><img src="/icon/Logo.svg" alt="Logo" /></a>
    <ul class="flexUl">
      <li data-link="/"><Knap text="SAMARBEJDE" /></li>
      <li data-link="ruter"><Knap text="RUTER" /></li>
      <li data-link="program">
        <Knap text="PROGRAM" />
      </li>
      <li data-link="/"><a href="/"><Knap text="OM OS" /></a></li>
      <li data-link="/"><a href="/"><Knap text="FOTOKONKURRENCE" /></a></li>
    </ul>

    <div class="grid">
      <Sprog_knap />
      <div>February 2 - 25/2024</div>
      <div>KÃ¸benhavn</div>
    </div>
  </nav>
</header>

<style>
  nav {
    justify-content: center;
    align-items: center;
    position: relative;
    z-index: 100;
  }
  ul {
    list-style: none;
    max-width: fit-content;
    padding: 10px;
    border-radius: 25px;
    background-color: var(--bg-overlay);
    justify-content: center;
    align-items: center;
  }
  a {
    font-family: "circular";
    font-size: 16px;
  }

  .grid {
    display: grid;
    gap: 0.3rem;
  }

  .flexUl {
    display: flex;
    gap: 1rem;
  }
  .flexNav {
    display: flex;
    gap: 16%;
  }

  /*   --------media q------ */
  @media screen and (max-width: 700px) {
    header {
      display: none;
    }
  }
</style>

<script>
  document.querySelectorAll(".flexUl li").forEach((item) => {
    // console.log("ITE", item);

    item.addEventListener("click", klikBtn);
  });
  function klikBtn(evt) {
    console.log("SOMETHING", evt.currentTarget.dataset.link);
    location.href = evt.currentTarget.dataset.link;
  }
</script>
