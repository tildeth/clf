---
import KnapUnder from "./KnapUnder.astro";
const { text } = Astro.props;
---

<header>
  <nav class="flexNav">
    <ul class="flexUl">
      <li data-link=""><KnapUnder text="Gåruter" /></li>
      <li data-link=""><KnapUnder text="Cykelruter" /></li>
      <li data-link="">
        <KnapUnder text="Kort over området" />
      </li>
    </ul>
  </nav>
