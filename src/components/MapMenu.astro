<style>
  nav {
    justify-content: center;
    align-items: center;
    position: relative;
    z-index: 100;
  }
  ul {
    list-style: none;
    max-width: fit-content;
    padding: 10px;
    border-radius: 2rem;
    background-color: var(--bg-overlay);
    justify-content: center;
    align-items: center;
  }
  a {
    font-family: "circular";
    font-size: 16px;
  }

  .grid {
    display: grid;
    gap: 0.3rem;
  }

  .flexUl {
    display: flex;
    gap: 1rem;
  }
  .flexNav {
    display: flex;
    gap: 16%;
  }
</style>

